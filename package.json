{
  "name": "sync-evolve",
  "version": "1.0.0",
  "description": "Synchronicity Engine - Multi-site static generation",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "dev:main": "vite --config packages/main-site/vite.config.js",
    "dev:temples": "vite --config packages/temples-site/vite.config.js", 
    "dev:eden": "vite --config packages/eden-site/vite.config.js",
    "build": "npm run build:main && npm run build:temples && npm run build:eden",
    "build:main": "vite build --config packages/main-site/vite.config.js",
    "build:temples": "vite build --config packages/temples-site/vite.config.js",
    "build:eden": "vite build --config packages/eden-site/vite.config.js",
    "preview": "vite preview"
  },
  "devDependencies": {
    "vite": "^5.0.0"
  }
}